{% extends "TimelineBundle::layout.html.twig" %}


{% block body %}
    <div class="block">
        <table class="table table-bordered table-striped">
            <tr class="blog-title">
                <th colspan=2><img src={{ absolute_url(asset('bundles/framework/images/')) }}stylo.png /> Mes
                    informations
                </th>
            </tr>
            <tr>
                <td>id utilisateur :</td>
                <td>{{ user.id_user }}</td>
            </tr>
            <tr>
                <td>name :</td>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <td>email :</td>
                <td>{{ user.email }}</td>
            </tr>
        </table>
        </br>

        <table class="table table-bordered table-striped">
            <tr class="blog-title">
                <th colspan=3><img src={{ absolute_url(asset('bundles/framework/images/')) }}manette.png /> Mes jeux</th>
            </tr>
            {% for id,name in games %}
                <tr>
                    <td>{{ name }}</td>

                    {% if accountName[id] is empty %}
                        <form action="{{ path('myaccount_add') }}" class="navbar-form navbar-left" role="search"
                              method="POST">
                            <td>

                                <input type="hidden" name="id_game" value={{ id }}>
                                <input type="text" name="pseudo" class="form-control" placeholder="Mon pseudo">
                            </td>
                            <td>
                                <button type="submit" class="btn btn-default">Valider</button>

                            </td>
                        </form>

                    {% else %}
                        <form action="{{ path('myaccount_mod') }}" class="" method="POST">
                            <td>{{ accountName[id] }}</td>
                            <input type="hidden" name="id_game" value={{ id }}></td>
                            <input type="hidden" name="account_name" value= {{ accountName[id] }}>
                            <td>
                                <button type="submit" class="btn btn-default">Modifier</button>
                            </td>
                        </form>
                    {% endif %}
                </tr>

            {% endfor %}
        </table>
    </div>
{% endblock %}