{% extends "TimelineBundle::layout.html.twig" %}


{% block body %}
    <div class="block">
        <ul class="nav nav-pills">
            <li class="active"><a data-toggle="tab" href="#MyAccount">Mon compte</a></li>
            <li><a data-toggle="tab" href="#Favourites">Mes favoris</a></li>
        </ul>
        <div class="tab-content">

            <div id='MyAccount' class="tab-pane fade in active">
                <table class="table table-bordered table-striped">
                    <tr class="blog-title">
                        <th colspan=2><img src={{ absolute_url(asset('bundles/framework/images/')) }}stylo.png/> Mes
                            informations
                        </th>
                    </tr>
                    <tr>
                        <td>id utilisateur :</td>
                        <td>{{ user.id_user }}</td>
                    </tr>
                    <tr>
                        <td>name :</td>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <td>email :</td>
                        <td>{{ user.email }}</td>
                    </tr>
                </table>
                </br>

                <table class="table table-bordered table-striped">
                    <tr class="blog-title">
                        <th colspan=3><img src={{ absolute_url(asset('bundles/framework/images/')) }}manette.png/> Mes
                            jeux
                        </th>
                    </tr>
                    {% for id,name in games %}
                        <tr>
                            <td>{{ name }}</td>

                            {% if accountName[id] is empty %}
                                <form action="{{ path('myaccount_add') }}" class="navbar-form navbar-left" role="search"
                                      method="POST">
                                    <td>

                                        <input type="hidden" name="id_game" value={{ id }}>
                                        <input type="text" name="pseudo" class="form-control" placeholder="Mon pseudo">
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-default">Valider</button>

                                    </td>
                                </form>

                            {% else %}
                                <form action="{{ path('myaccount_mod') }}" class="" method="POST">
                                    <td>{{ accountName[id] }}</td>
                                    <input type="hidden" name="id_game" value={{ id }}></td>
                                    <input type="hidden" name="account_name" value= {{ accountName[id] }}>
                                    <td>
                                        <button type="submit" class="btn btn-default">Modifier</button>
                                    </td>
                                </form>
                            {% endif %}
                        </tr>

                    {% endfor %}
                </table>
            </div>
            <div id="Favourites" class="tab-pane fade">
                {% if mesFavoris is empty %}
                    <p><br/><b>Vous n'avez aucun favoris actuellement !</b></p>
                {% else %}
                    <table class="table table-bordered table-striped">
                    <tr>
                        <th><h3 align="center"> Nom du personnage</h3></th>
                        <th><h3 align="center"> Ne plus suivre</h3></th>
                    </tr>

                    {% for favourite in mesFavoris %}
                            <tr>
                                <td align="center">
                                    {{ favourite.name }}
                                </td>
                                <td align="center">
                                    <a tabindex="0" class="btn btn-lg btn" role="button" data-toggle="popover"
                                       data-trigger="focus"
                                       href="{{ path('supprfavoris',{'id_favoris':favourite.id}) }}"
                                       title="Retirer des favoris" data-content="Le supprimer des favoris"><span
                                                class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span></a>
                                </td>
                            </tr>
                    {% endfor %}
                    </table>

                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}