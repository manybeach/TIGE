{% extends "TimelineBundle::layout.html.twig" %}


{% block body %}
    <div class="block">
        <table class="table table-bordered table-striped">
            <tr class="blog-title">
                <th colspan=2>Mes informations</th>
            </tr>
            <tr>
                <td>id utilisateur :</td>
                <td>{{ user.id_user }}</td>
            </tr>
            <tr>
                <td>name :</td>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <td>email :</td>
                <td>{{ user.email }}</td>
            </tr>
        </table>
        </br>

        <table class="table table-bordered table-striped">
            <tr class="blog-title">
                <th colspan=2>Mes jeux</th>
            </tr>
            {% for name in games %}
                <tr>
                    <td>{{ name }}</td>
                    <td>
                        <form class="navbar-form navbar-left" role="search">

                            <input type="text" class="form-control" placeholder="Rechercher">

                            <button type="submit" class="btn btn-default">Submit</button>
                        </form>
                    </td>
                </tr>

            {% endfor %}
        </table>
    </div>
{% endblock %}