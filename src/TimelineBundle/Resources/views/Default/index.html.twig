{% extends "TimelineBundle::layout.html.twig" %}


{% block body %}

    {% block content_header %}

    {% endblock %}

    <div class="block">
        {% block content %}
            {% for players in AllData %}
                {% for player,matchs in players %}
                    {% for data in matchs %}
                        <table class="table table-bordered table-striped">
                            <tr class="blog-title">
                                <th colspan=3>League Of Legend</th>
                            <tr>
                                <td rowspan=2><img src="{{ data.photo }}"</td>
                                <td align ="center">
                                   <img src="http://ddragon.leagueoflegends.com/cdn/5.5.1/img/ui/champion.png"/>  {{ player }}
                                </td>

                                <td><img src={{ absolute_url(asset('bundles/framework/images/calendar.png')) }} /> {{ data.createDate }}</td>
                            <tr>
                                <td>Level du joueur : {{ data.summonerLevel }}</td>
                                <td>Dur√©e du match : {{ data.timePlayed }}</td>
                            </tr>
                            </tr>
                            <tr>
                                <td rowspan=2>Champion ID{{ data.championId }}</td>
                                <td> <img src="http://ddragon.leagueoflegends.com/cdn/5.5.1/img/ui/score.png"/>  {{ data.championsKilled }}/{{ data.numDeaths }}/{{ data.assists }}</td>
                                <td><img src="http://ddragon.leagueoflegends.com/cdn/5.5.1/img/ui/gold.png"/>  {{ data.goldEarned }}</td>
                            <tr>
                                <td>KDA  : {{ data.kda}}</td>
                                <td><img src="http://ddragon.leagueoflegends.com/cdn/5.5.1/img/ui/minion.png"/> {{ data.minionsKilled }}</td>
                            </tr>
                            </tr>
                        </table>
                        </br>
                    {% endfor %}
                {% endfor %}
            {% endfor %}
        {% endblock %}
    </div>
{% endblock %}
